rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function signedIn() {
      return request.auth != null
        && request.auth.token.email is string
        && request.auth.token.email.matches('.*@cornell\\.edu$');
    }

    function isAdmin() {
      return request.auth != null && request.auth.token.email in [
        'ichakravorty14@gmail.com',
        'ic367@cornell.edu'
      ];
    }

    function hasAllowedEmail() {
      return signedIn() || isAdmin();
    }

    function isGlobalScope(marketplaceId) {
      return !(marketplaceId is string) || marketplaceId == null;
    }

    function marketplaceMemberDocId(marketplaceId, userId) {
      return marketplaceId + '_' + userId;
    }

    function isMarketplaceMember(marketplaceId) {
      return signedIn()
        && marketplaceId is string
        && exists(/databases/$(database)/documents/marketplaceMembers/$(marketplaceMemberDocId(marketplaceId, request.auth.uid)));
    }

    function isMarketplaceCreator(marketplaceId) {
      return signedIn()
        && marketplaceId is string
        && exists(/databases/$(database)/documents/marketplaces/$(marketplaceId))
        && get(/databases/$(database)/documents/marketplaces/$(marketplaceId)).data.creatorUserId == request.auth.uid;
    }

    function canReadMarketplaceScoped(marketplaceId) {
      return isGlobalScope(marketplaceId)
        || isAdmin()
        || isMarketplaceMember(marketplaceId)
        || isMarketplaceCreator(marketplaceId);
    }

    function marketIsOpen(marketId) {
      return get(/databases/$(database)/documents/markets/$(marketId)).data.status == 'OPEN'
        || (!('status' in get(/databases/$(database)/documents/markets/$(marketId)).data)
        && get(/databases/$(database)/documents/markets/$(marketId)).data.resolution == null);
    }

    match /marketplaces/{marketplaceId} {
      allow read: if hasAllowedEmail();
      allow create: if hasAllowedEmail()
        && request.resource.data.creatorUserId == request.auth.uid
        && request.resource.data.name is string
        && request.resource.data.slug is string
        && request.resource.data.startingBalance is number
        && request.resource.data.defaultB is number;
      allow update, delete: if isAdmin() || isMarketplaceCreator(marketplaceId);
    }

    match /marketplaceSecrets/{marketplaceId} {
      allow read: if isAdmin() || isMarketplaceCreator(marketplaceId);
      allow create: if hasAllowedEmail()
        && (isAdmin()
          || (exists(/databases/$(database)/documents/marketplaces/$(marketplaceId))
            && get(/databases/$(database)/documents/marketplaces/$(marketplaceId)).data.creatorUserId == request.auth.uid));
      allow update, delete: if isAdmin() || isMarketplaceCreator(marketplaceId);
    }

    match /marketplaceMembers/{membershipId} {
      allow read: if isAdmin()
        || (signedIn() && request.auth.uid == resource.data.userId)
        || isMarketplaceCreator(resource.data.marketplaceId);

      allow create: if hasAllowedEmail()
        && request.resource.data.userId == request.auth.uid
        && request.resource.data.marketplaceId is string
        && membershipId == marketplaceMemberDocId(request.resource.data.marketplaceId, request.auth.uid)
        && request.resource.data.role in ['CREATOR', 'MEMBER']
        && request.resource.data.balance is number
        && request.resource.data.lifetimeRep is number
        && (
          (request.resource.data.role == 'CREATOR'
            && exists(/databases/$(database)/documents/marketplaces/$(request.resource.data.marketplaceId))
            && get(/databases/$(database)/documents/marketplaces/$(request.resource.data.marketplaceId)).data.creatorUserId == request.auth.uid)
          ||
          (request.resource.data.role == 'MEMBER'
            && request.resource.data.joinProofHash is string
            && exists(/databases/$(database)/documents/marketplaceSecrets/$(request.resource.data.marketplaceId))
            && request.resource.data.joinProofHash == get(/databases/$(database)/documents/marketplaceSecrets/$(request.resource.data.marketplaceId)).data.passwordHash)
        );

      allow update: if isAdmin()
        || isMarketplaceCreator(resource.data.marketplaceId)
        || (signedIn() && request.auth.uid == resource.data.userId);
      allow delete: if isAdmin()
        || isMarketplaceCreator(resource.data.marketplaceId)
        || (signedIn() && request.auth.uid == resource.data.userId);
    }

    match /marketplaceWeeklySnapshots/{snapshotId} {
      allow read: if isAdmin()
        || (resource.data.marketplaceId is string && (isMarketplaceMember(resource.data.marketplaceId) || isMarketplaceCreator(resource.data.marketplaceId)));
      allow write: if isAdmin()
        || (request.resource.data.marketplaceId is string && isMarketplaceCreator(request.resource.data.marketplaceId));
    }

    match /markets/{marketId} {
      allow read: if canReadMarketplaceScoped(resource.data.marketplaceId);
      allow create: if (
        isGlobalScope(request.resource.data.marketplaceId) && isAdmin()
      ) || (
        !isGlobalScope(request.resource.data.marketplaceId)
        && (isAdmin() || isMarketplaceCreator(request.resource.data.marketplaceId))
      );
      allow update, delete: if isAdmin()
        || (!isGlobalScope(resource.data.marketplaceId) && isMarketplaceCreator(resource.data.marketplaceId));
    }

    match /bets/{betId} {
      allow read: if canReadMarketplaceScoped(resource.data.marketplaceId);
      allow create: if hasAllowedEmail()
        && request.resource.data.userId == request.auth.uid
        && request.resource.data.marketId is string
        && request.resource.data.side in ['YES', 'NO']
        && request.resource.data.type in ['BUY', 'SELL']
        && request.resource.data.amount is number
        && request.resource.data.shares is number
        && request.resource.data.probability is number
        && request.resource.data.probability >= 0
        && request.resource.data.probability <= 1
        && (
          (request.resource.data.type == 'BUY'
            && request.resource.data.amount > 0
            && request.resource.data.shares > 0)
          ||
          (request.resource.data.type == 'SELL'
            && request.resource.data.amount < 0
            && request.resource.data.shares < 0)
        )
        && (
          (
            isGlobalScope(get(/databases/$(database)/documents/markets/$(request.resource.data.marketId)).data.marketplaceId)
            && isGlobalScope(request.resource.data.marketplaceId)
          )
          ||
          (
            request.resource.data.marketplaceId is string
            && request.resource.data.marketplaceId == get(/databases/$(database)/documents/markets/$(request.resource.data.marketId)).data.marketplaceId
            && isMarketplaceMember(request.resource.data.marketplaceId)
          )
        )
        && marketIsOpen(request.resource.data.marketId);
      allow update: if isAdmin();
      allow delete: if isAdmin();
    }

    match /comments/{commentId} {
      allow read: if canReadMarketplaceScoped(resource.data.marketplaceId);
      allow create: if hasAllowedEmail()
        && request.resource.data.userId == request.auth.uid
        && canReadMarketplaceScoped(request.resource.data.marketplaceId);
      allow update: if (
        isAdmin()
        || (hasAllowedEmail() && request.auth.uid == resource.data.userId)
      )
        && request.resource.data.userId == resource.data.userId
        && canReadMarketplaceScoped(resource.data.marketplaceId)
        && canReadMarketplaceScoped(request.resource.data.marketplaceId);
      allow delete: if (
        isAdmin()
        || (hasAllowedEmail() && request.auth.uid == resource.data.userId)
      )
        && canReadMarketplaceScoped(resource.data.marketplaceId);
    }

    match /newsItems/{newsId} {
      allow read: if canReadMarketplaceScoped(resource.data.marketplaceId);
      allow write: if isAdmin()
        || (
          request.resource.data.marketplaceId is string
          && isMarketplaceCreator(request.resource.data.marketplaceId)
        );
    }

    match /adminLog/{id} {
      allow read, write: if isAdmin();
    }

    match /weeklySnapshots/{snapshotId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    match /users/{userId} {
      allow read: if true;
      allow create: if hasAllowedEmail() && request.auth.uid == userId;
      allow update: if hasAllowedEmail() && (request.auth.uid == userId || isAdmin());
      allow delete: if isAdmin();
    }

    match /displayNames/{nameKey} {
      allow read: if true;
      allow create: if hasAllowedEmail() && request.resource.data.userId == request.auth.uid;
      allow update: if (
        request.auth.uid == resource.data.userId || isAdmin()
      ) && hasAllowedEmail() && request.resource.data.userId == resource.data.userId;
      allow delete: if hasAllowedEmail() && (request.auth.uid == resource.data.userId || isAdmin());
    }

    match /marketRequests/{requestId} {
      allow create: if hasAllowedEmail()
        && request.resource.data.submittedBy == request.auth.uid
        && request.resource.data.status == 'PENDING'
        && request.resource.data.resolutionDate > request.time;
      allow read: if isAdmin() || (hasAllowedEmail() && resource.data.submittedBy == request.auth.uid);
      allow update: if isAdmin()
        && request.resource.data.resolutionDate > request.time;
      allow delete: if isAdmin();
    }

    match /notifications/{notificationId} {
      allow read: if hasAllowedEmail()
        && (request.auth.uid == resource.data.userId || isAdmin());
      allow create: if isAdmin();
      allow update: if (hasAllowedEmail()
        && request.auth.uid == resource.data.userId
        && request.resource.data.userId == resource.data.userId
        && request.resource.data.read is bool
        && request.resource.data.diff(resource.data).affectedKeys().hasOnly(['read']))
        || isAdmin();
      allow delete: if isAdmin();
    }
  }
}
