rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function signedIn() {
      return request.auth != null
        && request.auth.token.email is string
        && request.auth.token.email.matches('.*@cornell\\.edu$');
    }

    function isAdmin() {
      return request.auth != null && request.auth.token.email in [
        'ichakravorty14@gmail.com',
        'ic367@cornell.edu'
      ];
    }

    function hasAllowedEmail() {
      return signedIn() || isAdmin();
    }

    function marketIsOpen(marketId) {
      return get(/databases/$(database)/documents/markets/$(marketId)).data.status == 'OPEN'
        || (!('status' in get(/databases/$(database)/documents/markets/$(marketId)).data)
        && get(/databases/$(database)/documents/markets/$(marketId)).data.resolution == null);
    }

    match /markets/{marketId} {
      allow read: if true;
      allow create, update, delete: if isAdmin();
    }

    match /bets/{betId} {
      allow read: if true;
      allow create: if hasAllowedEmail()
        && request.resource.data.userId == request.auth.uid
        && request.resource.data.marketId is string
        && request.resource.data.side in ['YES', 'NO']
        && request.resource.data.type in ['BUY', 'SELL']
        && request.resource.data.amount is number
        && request.resource.data.shares is number
        && request.resource.data.probability is number
        && request.resource.data.probability >= 0
        && request.resource.data.probability <= 1
        && (
          (request.resource.data.type == 'BUY'
            && request.resource.data.amount > 0
            && request.resource.data.shares > 0)
          ||
          (request.resource.data.type == 'SELL'
            && request.resource.data.amount < 0
            && request.resource.data.shares < 0)
        )
        && marketIsOpen(request.resource.data.marketId);
      allow update: if isAdmin();
      allow delete: if isAdmin();
    }

    match /comments/{commentId} {
      allow read: if true;
      allow write: if hasAllowedEmail();
    }

    match /newsItems/{newsId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    match /adminLog/{id} {
      allow read, write: if isAdmin();
    }

    match /users/{userId} {
      allow read: if true;
      allow create: if hasAllowedEmail() && request.auth.uid == userId;
      allow update: if hasAllowedEmail() && (request.auth.uid == userId || isAdmin());
      allow delete: if false;
    }

    match /displayNames/{nameKey} {
      allow read: if true;
      allow create: if hasAllowedEmail() && request.resource.data.userId == request.auth.uid;
      allow update: if (
        request.auth.uid == resource.data.userId || isAdmin()
      ) && hasAllowedEmail() && request.resource.data.userId == resource.data.userId;
      allow delete: if hasAllowedEmail() && (request.auth.uid == resource.data.userId || isAdmin());
    }

    match /marketRequests/{requestId} {
      allow create: if hasAllowedEmail()
        && request.resource.data.submittedBy == request.auth.uid
        && request.resource.data.status == 'PENDING'
        && request.resource.data.resolutionDate > request.time;
      allow read: if isAdmin() || (hasAllowedEmail() && resource.data.submittedBy == request.auth.uid);
      allow update: if isAdmin()
        && request.resource.data.resolutionDate > request.time;
      allow delete: if isAdmin();
    }

    match /notifications/{notificationId} {
      allow read: if hasAllowedEmail()
        && (request.auth.uid == resource.data.userId || isAdmin());
      allow create: if isAdmin();
      allow update: if (hasAllowedEmail()
        && request.auth.uid == resource.data.userId
        && request.resource.data.userId == resource.data.userId
        && request.resource.data.read is bool
        && request.resource.data.diff(resource.data).affectedKeys().hasOnly(['read']))
        || isAdmin();
      allow delete: if isAdmin();
    }
  }
}
